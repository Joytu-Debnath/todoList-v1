<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300&family=Work+Sans:wght@600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box">
        <% newListItem.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>"  onChange="this.form.submit()">
                    <p><%=item.name%></p>
                </div>
            </form>

        <% }) %>
        <form action="/" method="post" class="item">
            <% if(newListItem.length===0){%>
                <input type="text" name="addText" id="" required placeholder="Add Item" autocomplete="off">
            <%}else{ %>
                <input type="text" name="addText" id="" required placeholder="New Item" autocomplete="off">
            <% } %>
            <button type="submit" name="list" value="<%=listTitle%>" >+</button>
        </form>
    </div>

</body>
<footer>
    Copyright 2023 Joytu Debnath
</footer>
</html>